<UserControl x:Class="SOPlugin.GUI.ConfigGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gui="clr-namespace:SOPlugin.GUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal" Margin="3,3,3,20">
			<TextBlock Text="Adventures Info:" />
			<TextBlock Name="AdventuresInfo" Margin="3,0,0,0" Width="Auto" Text="Adventures Info will be here" FontWeight="Bold" />
